{
  "name": "@supaglue/worker",
  "version": "0.0.0",
  "private": true,
  "module": "./index.ts",
  "scripts": {
    "db:clean": "rm -rf ./drizzle",
    "db:pull": "drizzle-kit introspect:pg --connectionString $POSTGRES_URL --driver pg",
    "db:push": "drizzle-kit push:pg --connectionString $POSTGRES_URL --driver pg --schema ./postgres/schema.ts --verbose --strict",
    "db:schema-diff": "pnpm db:clean && pnpm db:pull && drizzle-kit generate:pg --schema ./postgres/schema.ts && cd ./drizzle && ls 0001*.sql | xargs cat && pnpm db:clean",
    "db:schema-generate": "drizzle-kit generate:pg --schema ./postgres/schema.ts --out ./postgres/migrations",
    "db:template-dynamic-schema": "drizzle-kit generate:pg --schema ./postgres/schema-dynamic.ts --out ./drizzle && cd ./drizzle && ls *.sql | xargs cat && pnpm db:clean"
  },
  "dependencies": {
    "@opensdks/sdk-nango": "0.0.2",
    "@opensdks/sdk-supaglue": "0.0.3",
    "@supaglue/sdk": "workspace:*",
    "@t3-oss/env-core": "0.7.3",
    "drizzle-orm": "^0.29.3",
    "inngest": "^3.12.0",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.12"
  }
}
